.backimg{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 50;
}
.container{
   height:100vh;
   position: relative;
   z-index: 100;
   overflow: hidden;
   color: white;
}
.container >view{
   opacity: 0.8;
}
.notice{
  width: 90%;
  height: 300rpx;
  background-color: rgba(255,255,255,1);
  border-radius: 20rpx;
  padding:20rpx;
  box-sizing: border-box;
  margin:50rpx auto;
  color: rgba(233, 55, 55, 0.548);
  box-shadow: 1px 1px 5px 1px rgb(247, 69, 38);
}
.menu-box{
  position: absolute;
  bottom: 5vh;
  width:90vw;
  left: 5vw;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.menu-box .one{
   border-radius: 10rpx;
   height: 100rpx;
   width: 20vw; 
   font-size: 25rpx;
   line-height: 100rpx;
   text-align: center;
}
.menu-box .a{
  background-color: rgb(231, 47, 47);
}
.menu-box .b{
  background-color: rgb(74, 211, 19);
}
.menu-box .c{
  background-color: rgb(65, 124, 235);
}
.menu-box .d{
  background-color: rgb(233, 132, 49);
}